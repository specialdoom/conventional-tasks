{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
      "ignoreDeprecations": "5.0",
      "target": "ES2022",
      "module": "ES2022",
      "moduleResolution": "Node16",
      "lib": [
          "ES2022",
          "ES2021",
          "ES2020",
          "ES2019",
          "ES2018",
          "ES2017",
          "ES2016",
          "ES2015",
          "DOM"
      ],
      "declaration": true,
      "declarationMap": true,
      "strict": true,
      "esModuleInterop": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "composite": true
  },
  "exclude": [
      "node_modules",
      "dist"
  ]
}